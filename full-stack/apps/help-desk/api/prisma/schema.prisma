generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum UserRole {
  ADMIN
  TECHNICIAN
  CLIENT
}

enum CallStatus {
  OPEN
  IN_PROGRESS
  CLOSED
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      UserRole @default(CLIENT)
  avatarUrl String?  @map("avatar_url")

  technicianProfile Technician?

  createdCalls  Call[] @relation("ClientCalls")
  assignedCalls Call[] @relation("TechnicianCalls")

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")

  @@map("users")
}

model Technician {
  id           String @id @default(uuid())
  availability String
  userId       String @unique @map("user_id")
  user         User   @relation(fields: [userId], references: [id])

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")

  @@map("technicians")
}

model Service {
  id           String        @id @default(uuid())
  title        String
  price        Decimal
  isActive     Boolean       @default(true) @map("is_active")
  callServices CallService[]

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")

  @@map("services")
}

model Call {
  id String @id @default(uuid())

  clientId String @map("client_id")
  client   User   @relation("ClientCalls", fields: [clientId], references: [id])

  technicianId String @map("technician_id")
  technician   User   @relation("TechnicianCalls", fields: [technicianId], references: [id])

  status       CallStatus    @default(OPEN)
  callServices CallService[]

  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime? @updatedAt @map("updated_at")
  callServiceId String    @unique

  @@map("calls")
}

model CallService {
  id     String @id @default(uuid())
  callId String @map("call_id")
  call   Call   @relation(fields: [callId], references: [id])

  serviceId String  @map("service_id")
  service   Service @relation(fields: [serviceId], references: [id])
  value     Decimal

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")

  @@map("call_services")
}
